<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners_chunk_material"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="2dp"
    android:padding="5dp">

        <TextView
            android:id="@+id/counterLabelView"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="2"
            android:background="@color/colorWhite"
            android:gravity="left|center"
            android:text="default"
            android:fontFamily="@font/montserratitalic"
            android:textSize="30sp"
            tools:ignore="HardcodedText,NestedWeights,RtlHardcoded,SpUsage" />

        <Button
            android:id="@+id/counterSub"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".7"
            android:text="-1"
            android:textColor="@color/textWhite"
            android:textSize="20sp"
            android:fontFamily="@font/montserratbold"
            tools:ignore="HardcodedText,SpUsage" />

        <TextView
            android:id="@+id/counterD"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight=".5"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/textDark"
            android:fontFamily="@font/montserratsemibold"
            android:textSize="32sp"
            tools:ignore="HardcodedText,SpUsage" />

        <Button
            android:id="@+id/counterAdd"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".7"
            android:text="+1"
            android:textColor="@color/textWhite"
            android:textSize="20sp"
            android:fontFamily="@font/montserratbold"
            tools:ignore="HardcodedText,SpUsage" />


    </LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners_chunk_material"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:padding="5dp">
    <TextView
        android:id="@+id/chronometerLabelView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:paddingBottom="4dp"
        android:background="@color/colorWhite"
        android:gravity="left|center"
        android:text="default"
        android:fontFamily="@font/montserratitalic"
        android:textSize="30sp"
        tools:ignore="HardcodedText,NestedWeights,RtlHardcoded,SpUsage" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/chronometerStart"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:backgroundTint="@color/colorAccentTwo"
            android:text="Start"
            android:fontFamily="@font/montserratbold"
            android:textColor="@color/textDark"
            android:textAllCaps="false"
            android:gravity="center"/>

        <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:fontFamily="@font/montserratbold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            />

        <Button
            android:id="@+id/chronometerStop"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Reset"
            android:backgroundTint="@color/colorAccentTwo"
            android:fontFamily="@font/montserratbold"
            android:textColor="@color/textDark"
            android:textAllCaps="false"
            android:gravity="center"
            />


    </LinearLayout>

</LinearLayout>
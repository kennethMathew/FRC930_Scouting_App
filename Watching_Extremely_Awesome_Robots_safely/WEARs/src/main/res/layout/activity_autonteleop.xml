<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_material"
    tools:ignore="Overdraw">


    <ScrollView
        android:id="@+id/titleWindow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:orientation="vertical">

            <!--SANDSTORM-->

           <org.team930.bears.wears.CounterView
               android:id="@+id/testcounter"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:label="Counter"
               app:base="0"
               app:increment="1"

           />
            <org.team930.bears.wears.ToggleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:label="Toggle"/>

            <org.team930.bears.wears.SpinnerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:label="Spinner"
                android:entries="@array/spinnerList"
                tools:ignore="HardcodedText" />

            <org.team930.bears.wears.SeekbarView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:label="Seekbar"
                app:ceil="5"
                app:floor="1"
                app:floor_name="Didn't affect"
                app:ceil_name="Shut down"
                app:zero_name="Not Ranked"

                />

            <org.team930.bears.wears.ChronometerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:label="Chronometer"/>

            <org.team930.bears.wears.CheckboxView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:label="Checkbox"
                android:entries="@array/checkboxList"/>

            <TextView
                android:id="@+id/test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="choops"
                />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>


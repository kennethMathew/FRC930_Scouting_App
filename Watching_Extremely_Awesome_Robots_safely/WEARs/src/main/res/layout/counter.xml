<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners_chunk_material"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">


        <TextView
            android:id="@+id/label"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="2"
            android:background="@color/white"
            android:gravity="left|center"
            android:text="@{attr.label}"
            android:textSize="25dp"
            tools:ignore="HardcodedText,NestedWeights,RtlHardcoded,SpUsage" />

        <Button
            android:id="@+id/counterSub"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/lightBlue"
            android:text="-1"
            android:textColor="@color/white"
            android:textSize="15dp"
            tools:ignore="HardcodedText,SpUsage" />

        <TextView
            android:id="@+id/counterD"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="#D7DDEA"
            android:gravity="center"
            android:text="0"
            android:textSize="32dp"
            tools:ignore="HardcodedText,SpUsage" />

        <Button
            android:id="@+id/counterAdd"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/lightBlue"
            android:text="+1"
            android:textColor="@color/white"
            android:textSize="15dp"
            tools:ignore="HardcodedText,SpUsage" />


    </LinearLayout>

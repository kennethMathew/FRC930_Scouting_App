<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners_chunk_material"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="2dp"
    android:padding="5dp">

    <TextView
        android:id="@+id/textboxTopLabelView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:paddingBottom="4dp"
        android:background="@color/colorWhite"
        android:gravity="left|center"
        android:text="default"
        android:fontFamily="@font/montserratitalic"
        android:textSize="30sp"
        tools:ignore="HardcodedText,NestedWeights,RtlHardcoded,SpUsage" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textboxSideLabelView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/colorWhite"
            android:gravity="left|center"
            android:text="default"
            android:fontFamily="@font/montserratitalic"
            android:textSize="30sp"
            tools:ignore="HardcodedText,NestedWeights,RtlHardcoded,SpUsage" />

        <EditText
            android:id="@+id/textbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/edit_text_border"
            android:inputType="text"
            android:hint="default_hint"
            android:text=""
            android:fontFamily="@font/montserratmedium"
            android:textSize="18sp"
            tools:ignore="HardcodedText,NestedWeights,RtlHardcoded,SpUsage" />
    </LinearLayout>

</LinearLayout>
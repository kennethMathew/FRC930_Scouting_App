                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@color/lightBlue"
                        android:onClick="unlimitedCounterAdd"
                        android:text="+1"
                        android:textSize="15dp" />


                </LinearLayout>

            </LinearLayout> <!--Teleop Scale-->


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:text="Main Menu"
            android:textSize="30dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/goToPreMatch"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginBottom="23dp"
                android:layout_weight=".33"
                android:background="@drawable/rounded_button"
                android:onClick="setPreMatch"
                android:text="Start Scouting"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/transferData"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginBottom="23dp"
                android:layout_weight=".33"
                android:background="@drawable/rounded_button"
                android:onClick="setTransferData"
                android:text="Transfer Data"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/goToSettings"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight=".33"
                android:background="@drawable/rounded_button"
                android:onClick="setSettings"
                android:text="Settings"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="@color/background_material" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>


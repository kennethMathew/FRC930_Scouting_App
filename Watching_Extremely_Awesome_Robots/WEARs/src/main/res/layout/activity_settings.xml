<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/revokeStill"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:text="Settings"
            android:textSize="30dp"
            android:onClick="setRevokeStill"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_chunk_material"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="11dp"
            android:paddingRight="4dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:layout_weight=".4"
                android:background="@color/white"
                android:maxLines="1"
                android:padding="5dp"
                android:text="Scouter"
                android:textColor="@color/textMedium"
                android:textSize="30dp"
                android:textStyle="italic"

                />

            <Spinner
                android:id="@+id/scouterList"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".6"
                android:entries="@array/Scouter"
                android:spinnerMode="dialog"
                android:prompt="@string/scouterListPrompt"



                />

        </LinearLayout> <!--Scouter Selection-->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_material" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_chunk_material"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="11dp"
            android:paddingRight="4dp"
            android:paddingTop="10dp"

            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:layout_weight=".7"
                android:background="@color/white"
                android:text="+1S = +1A"
                android:textSize="30dp"
                android:textStyle="italic"
                android:padding="5dp"
                android:textColor="@color/textMedium" />

            <ToggleButton
                android:id="@+id/scoredAddsAttempt"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".3"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/toggle_button_at"
                android:onClick="setScoredAddsAttempt"
                android:textColor="@color/white"
                android:textOff="Off"
                android:textOn="On"

                />

        </LinearLayout> <!--Scored Adds Attempt-->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_material" />

        <LinearLayout
            android:id="@+id/adminUnlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_chunk_material"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="11dp"
            android:paddingRight="4dp"
            android:paddingTop="10dp"

            >

            <EditText
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:layout_weight=".7"
                android:background="@color/white"
                android:hint="Admin Password"
                android:maxLength="6"
                android:textSize="28dp"
                android:inputType="numberPassword"
                android:padding="5dp"
                android:textColor="@color/textMedium" />

            <Button
                android:id="@+id/submitPassword"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".3"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/blue_rounded_button"
                android:onClick="setSubmitPassword"
                android:textColor="@color/white"
                android:text="Unlock"

                />

        </LinearLayout> <!--Admin-->

        <ImageView
            android:id="@+id/disappearAdmin"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_material"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/nerdStatsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners_chunk_material"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="11dp"
                android:paddingRight="4dp"
                android:paddingTop="10dp"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="8dp"
                    android:layout_weight=".7"
                    android:background="@color/white"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="Stats for Nerds"
                    android:textStyle="italic"
                    android:textColor="@color/textMedium"
                    android:textSize="30dp"
                    android:visibility="visible"

                    />

                <Button
                    android:id="@+id/statsForNerds"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/blue_rounded_button"
                    android:text="Show Stats"
                    android:visibility="visible"
                    android:textColor="@color/white"
                    android:onClick="setStatsForNerds"

                    />

            </LinearLayout>

        </LinearLayout> <!--Stats For Nerds-->

        <ImageView
            android:id="@+id/disappearStatsForNerds"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_material"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/deleteBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners_chunk_material"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="11dp"
                android:paddingRight="4dp"
                android:paddingTop="10dp"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="8dp"
                    android:layout_weight=".7"
                    android:background="@color/white"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="Delete \'Le Data\'"
                    android:textStyle="italic"
                    android:textColor="@color/textMedium"
                    android:textSize="30dp"
                    android:visibility="visible"

                    />

                <Button
                    android:id="@+id/deleteData"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/blue_rounded_button"
                    android:text="Delete Data"
                    android:visibility="visible"
                    android:textColor="@color/white"
                    android:onClick="setDeleteData"

                    />

            </LinearLayout>

        </LinearLayout> <!--Delete le Data-->

        <ImageView
            android:id="@+id/disappearDelete"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_material"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/stillEnabler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_chunk_material"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="11dp"
            android:paddingRight="4dp"
            android:paddingTop="10dp"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:layout_weight=".7"
                android:background="@color/white"
                android:maxLines="1"
                android:padding="5dp"
                android:text="Still F.R.C."
                android:textColor="@color/textMedium"
                android:textSize="30dp"

                />

            <ToggleButton
                android:id="@+id/stillFRC"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".3"
                android:background="@drawable/toggle_button_at"
                android:onClick="setStillFRC"
                android:textColor="@color/white"
                android:textOff="Off"
                android:textOn="On"

                />

        </LinearLayout> <!--STILL-->

        <ImageView
            android:id="@+id/disappearStill"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_material"
            android:visibility="gone"
            />

    </LinearLayout>

    </ScrollView>
</RelativeLayout>


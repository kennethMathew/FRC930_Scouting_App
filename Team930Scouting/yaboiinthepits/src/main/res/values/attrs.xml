<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="counter">
        <attr name="increment" format="integer" > </attr>
        <attr name="base" format="integer"/>
    </declare-styleable>

    <declare-styleable name="label">
        <attr name="center" format="boolean"/>
        <attr name="color_text" format="enum">
            <enum name="zone3" value="1"/>
            <enum name="zone2" value="2"/>
            <enum name="zone4" value="3"/>
            <enum name="zone5" value="4"/>
            <enum name="zone1" value="5"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="button">
        <attr name="text" format="string" > </attr>
        <attr name="button_function" format="enum">
            <enum name="navigate" value="0"/>
            <enum name="delete" value="1"/>
            <enum name="nav_confirm" value="2"/>
        </attr>
        <attr name="next_activity" format="string"/>
        <attr name="toast" format="string"/>
    </declare-styleable>

    <declare-styleable name="textbox">
        <attr name="hint" format="string"/>
        <attr name="label_location" format="enum">
            <enum name="top" value="0"/>
            <enum name="side" value="1"/>
            <enum name="none" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="global">
        <attr name="label" format="string"/>
        <attr name="android:entries" />
        <attr name="other_enabled" format="boolean" > </attr>
    </declare-styleable>

    <declare-styleable name="image">
        <attr name="source" format="reference"/>
    </declare-styleable>

    <declare-styleable name="seekbar">
        <attr name="floor" format="integer"/>
        <attr name="ceil" format="integer"/>
        <attr name="floor_name" format="string"/>
        <attr name="ceil_name" format="string"/>
        <attr name="zero_name" format="string"/>
    </declare-styleable>

</resources>
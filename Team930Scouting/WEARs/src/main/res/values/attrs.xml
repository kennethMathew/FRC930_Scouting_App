<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="counter">
        <attr name="increment" format="integer" > </attr>
        <attr name="base" format="integer"></attr>
    </declare-styleable>

    <declare-styleable name="label">
        <attr name="center" format="boolean" > </attr>
    </declare-styleable>

    <declare-styleable name="button">
        <attr name="text" format="string" > </attr>
        <attr name="button_function" format="enum">
            <enum name="navigate" value="0"/>
            <enum name="delete" value="1"/>
            <enum name="nav_confirm" value="2"/>
        </attr>
        <attr name="next_activity" format="string"/>
        <attr name="double_press" format="boolean"/>
        <attr name="toast" format="string"/>
    </declare-styleable>

    <declare-styleable name="textbox">
        <attr name="hint" format="string" ></attr>
        <attr name="label_location" format="enum">
            <enum name="top" value="0"/>
            <enum name="side" value="1"/>
            <enum name="none" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="global">
        <attr name="label" format="string" ></attr>
        <attr name="android:entries" />
    </declare-styleable>

    <declare-styleable name="seekbar">
        <attr name="floor" format="integer" ></attr>
        <attr name="ceil" format="integer" ></attr>
        <attr name="floor_name" format="string" ></attr>
        <attr name="ceil_name" format="string" ></attr>
        <attr name="zero_name" format="string" ></attr>
    </declare-styleable>
</resources>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/rounded_corners_chunk_material"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="5dp">


    <TextView
        android:id="@+id/textboxSideLabelView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:fontFamily="@font/montserratitalic"
        android:gravity="left|center"
        android:text="default"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,NestedWeights,RtlHardcoded,SpUsage" />

    <EditText
        android:id="@+id/textboxSide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/montserratmedium"
        android:hint="default_hint"
        android:includeFontPadding="false"
        android:inputType="text"
        android:text=""
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textboxSideLabelView"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,NestedWeights,RtlHardcoded,SpUsage" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:text="Main Menu"
            android:textSize="30dp"
            /> <!--Main Menu-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_chunk_material"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="11dp"
            android:paddingRight="4dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:layout_weight=".75"
                android:background="@color/white"
                android:maxLines="1"
                android:padding="5dp"
                android:text="Pit Scouter"
                android:textStyle="italic"
                android:textColor="@color/textMedium"
                android:textSize="30dp"

                />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".25"
                android:background="@color/darkBlue"
                android:onClick="setGoToPitScouter"
                android:textColor="@color/white"
                android:text=">"
                android:textSize="30dp"


                />

        </LinearLayout> <!--Match Scouter-->


    </LinearLayout>

</RelativeLayout>


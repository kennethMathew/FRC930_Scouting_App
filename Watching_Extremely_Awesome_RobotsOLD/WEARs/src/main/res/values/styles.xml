<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_material</item>
        <item name="android:textColorPrimary">@color/textMedium</item>
        <item name="colorControlActivated">@color/lightBlue</item>
        <item name="colorButtonNormal">@color/lightBlue</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
        <item name="android:spinnerItemStyle">@style/mySpinnerItemStyle</item>
        <item name="android:editTextColor">@color/black</item>

    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/textMedium</item>
        <item name="android:textSize" tools:ignore="SpUsage">25dp</item>
    </style>


</resources>
